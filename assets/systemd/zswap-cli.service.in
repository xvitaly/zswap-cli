[Unit]
Description=@CMAKE_PROJECT_DESCRIPTION@
Documentation=man:@APP_NAME@(1) @CMAKE_PROJECT_HOMEPAGE_URL@

[Service]
Type=oneshot
ExecStart=@CMAKE_INSTALL_FULL_BINDIR@/@APP_NAME@ --config @CMAKE_INSTALL_FULL_SYSCONFDIR@/@CMAKE_PROJECT_NAME@/@APP_NAME@.conf
ExecStop=@CMAKE_INSTALL_FULL_BINDIR@/@APP_NAME@ -e N
RemainAfterExit=yes
ProtectSystem=strict
ProtectHome=true

[Install]
WantedBy=multi-user.target
